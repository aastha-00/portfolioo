---
interface Props {
  title: string;
  description: string;
  image: string;
  tags: string[];
}

const { title, description, image, tags } = Astro.props;
---

<div 
  class="bg-gray-800 rounded-lg overflow-hidden shadow-lg transition-transform hover:scale-[1.02] fade-up"
>
  <img 
    src={image} 
    alt={title} 
    class="w-full h-48 object-cover"
  />
  <div class="p-6">
    <h3 class="text-xl font-bold mb-2">{title}</h3>
    <p class="text-gray-400 mb-4">{description}</p>
    <div class="flex flex-wrap gap-2">
      {tags.map(tag => (
        <span class="px-3 py-1 bg-purple-500/20 text-purple-400 rounded-full text-sm">
          {tag}
        </span>
      ))}
    </div>
  </div>
</div>